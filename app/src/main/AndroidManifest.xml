<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jean.mapcanvas">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true">

        <activity android:name=".StartScreenActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ListScreenActivity"
            android:theme="@style/ListTheme"></activity>

        <activity android:name=".MainActivity"
            android:theme="@style/MainTheme"></activity>

        <activity android:name=".PathInfoModification"
            android:theme="@style/ModifyTheme"></activity>

        <activity android:name=".GuideScreenActivity"
            android:theme="@style/GuideTheme"></activity>
    </application>

</manifest>