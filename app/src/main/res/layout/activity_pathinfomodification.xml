<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="경로명 : "
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/name_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/name_textView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 : "
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/name_textView"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"/>
    <EditText
        android:id="@+id/date_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/date_textView"
        android:layout_below="@+id/name_delete"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/modifyButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="수정"
        android:textColor="#FFFFFF"
        android:background="@drawable/cookie"
        android:layout_gravity="center"
        android:onClick="modify"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/deleteButton"/>
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="삭제"
        android:textColor="#FFFFFF"
        android:background="@drawable/cookie"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:onClick="delete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>