<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.jean.mapcanvas.MainActivity">

    <TextView
        android:id="@+id/upper_interval"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="간격"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/left_interval"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:text="간격"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/upper_interval"/>

    <ImageView
        android:id="@+id/orientationImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/orientation"
        android:layout_below="@+id/upper_interval"
        android:layout_toRightOf="@+id/left_interval"
        tools:ignore="UnknownId"
        android:background="@android:color/transparent"/>
    <ImageView
        android:id="@+id/Img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/upper_interval"
        android:layout_toRightOf="@+id/orientationImg"
        tools:ignore="UnknownId"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/close"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@id/beginButton"
        android:onClick="closeButton"
        android:background="@android:color/transparent"
        android:padding="5dp"/>

    <ImageButton
        android:id="@+id/beginButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/begin"
        android:scaleType="fitCenter"
        android:onClick="beginPath"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/under_interval"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="간격"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/orientationImg" />

    <HorizontalScrollView
        android:id="@+id/horscrollView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/under_interval">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">
                <com.example.jean.mapcanvas.drawCanvas
                    android:id="@+id/drawing"
                    android:layout_width="800dp"
                    android:layout_height="800dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true">
                </com.example.jean.mapcanvas.drawCanvas>
            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/horscrollView"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/stride_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보폭(m) : "
            android:textColor="#000000"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/stride_editText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/step_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step : "
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/stepText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LinearLayout"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/distance_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance(m) : "
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/distanceText"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/orientation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orientation : "
            android:textColor="#000000"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/orientationText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/LinearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <ImageButton
                android:id="@+id/start_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/start"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/backTracking_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/backtracking"
                android:scaleType="fitCenter"
                android:onClick="backTracking"
                android:background="@android:color/transparent"
                android:padding="5dp"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="SAVE"
                android:background="@android:color/transparent"
                android:onClick="saveCurrentPath"/>

            <ImageButton
                android:id="@+id/list_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/list"
                android:scaleType="fitCenter"
                android:onClick="goToList"
                android:background="@android:color/transparent"
                android:padding="5dp"/>
        </LinearLayout>
</RelativeLayout>