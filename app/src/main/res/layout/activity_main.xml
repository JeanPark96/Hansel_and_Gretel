<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.jean.mapcanvas.MainActivity">

    <ImageView
        android:id="@+id/orientationImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/orientation"/>

    <com.example.jean.mapcanvas.drawCanvas
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/orientationImg">
    </com.example.jean.mapcanvas.drawCanvas>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/drawing"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/stride_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보폭(m) : "
            android:textColor="#000000"
            android:textSize="10dp"/>
        <EditText
            android:id="@+id/stride_editText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/step_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step : "
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/step_editText"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LinearLayout"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/distance_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance(m) : "
            android:textColor="@color/colorAccent"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/distanceText"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:textColor="@color/colorAccent"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/orientation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orientation : "
            android:textColor="#000000"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/orientationText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/LinearLayout2"
            android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/start_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/start"
                android:scaleType="fitCenter" />
            <Button
                android:id="@+id/save_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="SAVE" />

            <ImageButton
                android:id="@+id/backTracking_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/backtracking"
                android:scaleType="fitCenter"
                android:onClick="backTracking"/>
        </LinearLayout>
</RelativeLayout>